{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[]},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","source":["import pandas as pd\n","\n","# Login using e.g. `huggingface-cli login` to access this dataset\n","df = pd.read_parquet(\"hf://datasets/electricsheepafrica/nigerian_retail_and_ecommerce_purchase_history_records/data/nigerian_retail_and_ecommerce_purchase_history_records.parquet\")\n","df.head()\n","df.shape\n","df.describe()\n","df.isna().sum()\n","print\n","df[df.isna().any(axis=1)]\n","df.duplicated().sum()\n","df['purchase_date'] = pd.to_datetime(df['purchase_date']) # chuẩn hóa ngày tháng\n","df.info()\n","df['purchase_date'].head()\n","df['quantity'] = df['quantity'].astype(int) # chuẩn hóa số\n","df['unit_price_ngn'] = df['unit_price_ngn'].astype(float)\n","df['payment_method'] = df['payment_method'].str.lower().str.strip() #chuẩn hóa text\n","df['city'] = df['city'].str.title().str.strip()\n","df['product_category'] = df['product_category'].str.lower().str.strip()\n","\n","# Tính Q1, Q3, IQR\n","q1 = df[\"total_amount_ngn\"].quantile(0.25)\n","q3 = df[\"total_amount_ngn\"].quantile(0.75)\n","iqr = q3 - q1\n","\n","# Ngưỡng outlier\n","lower_bound = q1 - 1.5 * iqr\n","upper_bound = q3 + 1.5 * iqr\n","\n","# Tạo cột is_outlier (1 = outlier, 0 = không)\n","import numpy as np\n","df[\"is_outlier\"] = np.where(\n","    (df[\"total_amount_ngn\"] < lower_bound) |\n","    (df[\"total_amount_ngn\"] > upper_bound),\n","    1,\n","    0\n",")\n","df[df[\"is_outlier\"] == 1][[\"total_amount_ngn\", \"is_outlier\"]].head()\n","\n","df['calculated_total'] = df['quantity'] * df['unit_price_ngn'] # tổng tiền\n","df['diff'] = df['total_amount_ngn'] - df['calculated_total'] # tiền bị lệch\n","df[['total_amount_ngn', 'calculated_total', 'diff']].head()\n","df[\"diff_plus_discount\"] = df[\"diff\"] + df[\"discount_amount_ngn\"]\n","df[\"diff_plus_discount\"].describe()\n","df[\"is_amount_inconsistent\"] = (df[\"diff_plus_discount\"].abs() > 1).astype(int) # đánh dấu dòng bị lêch tiền\n","df[\"is_amount_inconsistent\"].value_counts(normalize=True) * 100 # tỉ lệ dòng bị lệch\n","\n","\n","df.to_parquet(\"nigerian_retail_clean.parquet\", index=False)\n","df = pd.read_parquet(\"nigerian_retail_clean.parquet\")\n","\n","# mỗi khách 1 dòng\n","df_customer = (\n","    df\n","    .groupby(\"customer_id\")\n","    .agg(\n","        total_orders=(\"purchase_id\", \"count\"),\n","        total_quantity=(\"quantity\", \"sum\"),\n","        total_spent=(\"total_amount_ngn\", \"sum\"),\n","        avg_order_value=(\"total_amount_ngn\", \"mean\"),\n","        first_purchase=(\"purchase_date\", \"min\"),\n","        last_purchase=(\"purchase_date\", \"max\"),\n","        outlier_orders=(\"is_outlier\", \"sum\"), # có bao nhiêu đơn bất thường\n","        inconsistent_orders=(\"is_amount_inconsistent\", \"sum\"), # bao nhiêu đơn bị lệch tiền\n","    )\n","    .reset_index()\n",")\n","\n","df_customer[\"customer_id\"].nunique() == len(df_customer)\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n","\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"executionInfo":{"status":"ok","timestamp":1769676350991,"user_tz":-420,"elapsed":15421,"user":{"displayName":"Hoàng Minh Tâm Trần","userId":"00745816572716154099"}},"outputId":"9df964bf-1721-482c-cab9-98b618902acf","id":"zgg6sOH47U3S"},"execution_count":null,"outputs":[{"output_type":"stream","name":"stdout","text":["<class 'pandas.core.frame.DataFrame'>\n","RangeIndex: 1000000 entries, 0 to 999999\n","Data columns (total 14 columns):\n"," #   Column               Non-Null Count    Dtype         \n","---  ------               --------------    -----         \n"," 0   purchase_id          1000000 non-null  object        \n"," 1   customer_id          1000000 non-null  object        \n"," 2   purchase_date        1000000 non-null  datetime64[ns]\n"," 3   product_category     1000000 non-null  object        \n"," 4   product_subcategory  1000000 non-null  object        \n"," 5   quantity             1000000 non-null  int64         \n"," 6   unit_price_ngn       1000000 non-null  float64       \n"," 7   total_amount_ngn     1000000 non-null  float64       \n"," 8   payment_method       1000000 non-null  object        \n"," 9   channel              1000000 non-null  object        \n"," 10  city                 1000000 non-null  object        \n"," 11  is_repeat_purchase   1000000 non-null  bool          \n"," 12  discount_applied     1000000 non-null  bool          \n"," 13  discount_amount_ngn  1000000 non-null  float64       \n","dtypes: bool(2), datetime64[ns](1), float64(3), int64(1), object(7)\n","memory usage: 93.5+ MB\n"]},{"output_type":"execute_result","data":{"text/plain":["True"]},"metadata":{},"execution_count":2}]}]}